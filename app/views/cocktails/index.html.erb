
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1444728399417-08d2aa39e6f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80);">
  <div class="container">
    <h1>Cocktails</h1>
    <p><strong>Create your dream cocktail</strong>!</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-outline-warning" %>
  </div>
</div>


<div class="card">
  <div class="card-body">
     <div class="card-text">
      <ul>
      <% @cocktails.each do |cocktail| %>
        <li class="title-cocktail"><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>

